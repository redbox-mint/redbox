#macro(noInformation)
<i>Not provided</i>
#end
#macro(getValue $key)
    #set($v = $util.get($item, $key).trim())
    #if($v && ("$!v" != ""))
		<![CDATA[ $v ]]>
    #else
		#noInformation()	
    #end
#end

#macro(getList $listName)
    #set($items = $util.getList($item, "$listName"))
    #if ($items && $items.size() > 0)
		#set($i = 0)
#foreach($el in $items)
#if($i > 0), #else #set($i = 1) #end
<![CDATA[$el]]>#end
    #else
		#noInformation()
    #end
#end

#macro(display $key $name)
    <dt>$name: </dt>
    #set($v = $util.get($item, $key).trim())
    <dd>
    #if($v && ("$!v" != ""))
		<![CDATA[ $v ]]>
    #else
		#noInformation()	
    #end
    </dd>
#end
#macro(displayNote $key $name)
    #set($v = $util.get($item, $key).trim())
    #if($v && ("$!v" != ""))
    	<h4>$name</h4>
    	<p><![CDATA[ $v ]]></p>
    #end
#end
#macro(displayRow $key $name $c $type)
	<tr class="$c">
    <td class="first_col">$name: </td>
    <td>#if ( $type == "list" ) #getList($key) #else #getValue($key) #end </td>
    </tr>
#end

