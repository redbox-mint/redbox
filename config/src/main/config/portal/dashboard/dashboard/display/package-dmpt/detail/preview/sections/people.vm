#end

#macro(displayKey $map $key $required)
#set ($value = $map.get($key))
#if ("$!value" != "")
$!value
#else
    #if ($required)
#missing($key)
    #end
#end
#end

#macro(displayOptionalKey $map $key)
	#if ($key == "person.foaf:email")
		[ #displayKey($map $key false) ]
	#else
		#displayKey($map $key false)
	#end
#end

#macro(displayRequiredKey $map $key)
