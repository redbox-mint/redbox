#sectionHeading("Attachments")

<div class="meta">
    <dl>
        <dd>
            #set($attachedFiles = $self.getAttachedFiles($oid))
            #if($attachedFiles.isEmpty())
            No files currently attached.
            #else
                <ol>
                #foreach($file in $attachedFiles)
                    #set($filename = $file.get("filename"))
                    #set($encodedFileName = $filename.replaceAll("\s", "\$0020"))
                    <li>
                        <a href="$portalPath/detail/$file.get('id')/$encodedFileName?preview=true" target="_blank">$filename</a>
                        ($file.get("attachment_type"), $file.get("access_rights"))
                    </li>
                #end
                </ol>
            #end
        </dd>
    </dl>
</div>
