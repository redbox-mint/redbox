<script type="text/javascript">
$(function() {
    $("a.advanced").live("click", function() {
        var baseId = $(this).attr("id").replace(".advanced", "");
        var row = $("tr[id=" + baseId + ".advRow]");
        row.find("span.advanced").each(function(c,e){$(e).toggle();});
        return false;
    });
    function relatedDataToggle(element) {
        var baseId = element.attr("id").replace(".redbox:origin", "");
        if (element.is(":checked")) {
            getReDBoxById(baseId+".dc:identifier").hide();
        } else {
            getReDBoxById(baseId+".dc:identifier").show();
        }
    }
    $(".local-related-data").live("click", function() {
        relatedDataToggle($(this));
        return true;
    }).live("onDataChanged", function() {
        var element = $(this);
        relatedDataToggle(element);
        var baseId = element.attr("id").replace(".redbox:origin", "");
        if (!element.is(":checked")) {
            getReDBoxById(baseId+".advanced").click();
        }
    });

    function splitData(row) {
        var items = row[0].split("::");
        return {
            oid: items[0],
            title: items[1]
        };
    }

    $(".collectionTitleLookup").live("focus", function(){
        var elem = $(this);
        var baseId = elem.attr("id").replace(".dc:title", "");
        elem.unautocomplete();
        if (getReDBoxById(baseId+".redbox:origin").is(":checked")){
            elem.autocomplete(
                "$portalPath/actions/datasets.ajax?",
                {
                    extraParams: {
                        qs: function() {
                            return "$oid";
                        }
                    },
                    formatItem: function(row) {return splitData(row).title;},
                    formatResult: function(row) {return splitData(row).title;},
                    width: "40em"
                }).result(function(event, row) {
                    if (row) {
                        var data = splitData(row);
                        getReDBoxById(baseId+".dc:identifier").val(data.oid);
                    }
                })
        }
    }).live("blur", function(){
        $(this).search();
    });

    function splitService(row) {
        var items = row[0].split("::");
        return {
            title: items[0],
            id: items[1],
            curatedPid: items[2]

        };
    }

    $(".serviceTitleLookup").live("focus", function(){
        var elem = $(this);
        var baseId = elem.attr("id").replace(".dc:title", "");
        elem.unautocomplete();
        elem.autocomplete(
            "$portalPath/proxyGet.script?ns=Services&autocomplete=true&fields=dc:title,dc:identifier,pidProperty",
            {
                extraParams: {
                    qs: function() { return "count=25&searchTerms=" + escape(elem.val().toLowerCase()); }
                },
                formatItem: function(row) { return splitService(row).title; },
                formatResult: function(row) { return splitService(row).title; },
                width: "40em"
            }).result(function(event, row) {
                if (row) {
                    var data = splitService(row);
                    var id = data.id;
                    if (data.curatedPid && data.curatedPid != "*") {
                        id = data.curatedPid;
                    }
                    getReDBoxById(baseId+".dc:identifier").val(id);
                }
            })
    }).live("blur", function(){
        $(this).search();
    });
});
</script>
<script type="text/javascript" src="$portalPath/js/jquery.1.7.1.min.js"></script>
<script>var $171 = jQuery.noConflict(true);</script>
<script type="text/javascript">
    function escapeId(rawId) {
        return "#" + rawId.replace( /(:|\.)/g, "\\$1" );
    }
    function hasInvalidDescription(id) {
        return ($(escapeId(id)).val() == "");
    }

    function hideDescriptionJQEasyCounter() {
        getDescriptionParent($('.descriptionInput')).find('.jqEasyCounterMsg').hide();
    }

    function updateDescriptionsRDAComplianceValidation() {
        var hasCompliance = false;
        $('.descriptionSelect').each(function(index, e) {
             if (index > 0) {
                if ($171.inArray($(this).val(), ['brief','full']) != -1) {
                    hasCompliance = true;
                }
             }
        });
        $('[id=isDescriptionRDACompliant]').val("");
        if (hasCompliance) {
            $('[id=isDescriptionRDACompliant]').val(hasCompliance);
            $('[id=isDescriptionRDACompliant]').hide();
        }
    }

    function updateEmptyDescriptionsValidation() {
        var hasDescription = true;
        $('.description.hidden').each(function(index, e) {
            if (index > 0) {
                var jQelement = $(escapeId(e.id));
                if (jQelement.val() == "") {
                    hasDescription = false;
                }
            }
        });
        $('[id=hasNoEmptyDescriptions]').val("");
        if (hasDescription) {
            $('[id=hasNoEmptyDescriptions]').val(hasDescription);
            $('[id=hasNoEmptyDescriptionsErrMsg]').hide();
        }
    }

    function updateAllDescriptionsValidation() {
        updateEmptyDescriptionsValidation();
        updateDescriptionsRDAComplianceValidation();
    }

    function getDescriptionParent(jQDescriptionElement) {
        return jQDescriptionElement.parents(".item-input-display");
    }

    function toggleDescriptionValidations(parent, descriptionType) {
        parent.find(".validation.description").hide();
        parent.find('.validation.description.'+descriptionType).show();
    }

    function getDescriptionInputElement(parent, descriptionType) {
        parent.find('.descriptionInput').hide();
        return parent.find('.descriptionInput.'+ descriptionType);
    }

    function addFullEasyCounter(jQElement) {
        jQElement.jqEasyCounter({
            maxChars: 12000,
            maxCharsWarning: 11990,
            msgTextAlign: 'left'
        });
    }

    //171 ready function addresses issues with capturing all dynamic rows
    $171(document).ready(function() {
        addFullEasyCounter($('.descriptionInput.full'));

        $171('.deleteDescription').bind('click', updateAllDescriptionsValidation);
        $(".descriptionSelect").each(function(index) {
            if (index > 0) {
                var parent = getDescriptionParent($(this));
                var descriptionType = $(this).val();
                var textSource = parent.find(".description.hidden");
                var textDestination = getDescriptionInputElement(parent, descriptionType);
                toggleDescriptionValidations(parent, descriptionType);
                if (textDestination) {
                    textDestination.val(textSource.val());
                    textDestination.show();
                }
            }
        });
        updateAllDescriptionsValidation();
        $171('.input-list').on('change', '.descriptionSelect', function() {
            hideDescriptionJQEasyCounter();
            var parent = getDescriptionParent($(this));
            var descriptionType = $(this).val();
            var textSource = getDescriptionInputElement(parent, descriptionType);
            toggleDescriptionValidations(parent, descriptionType);
            var textValue = ""
            if (textSource) {
                textSource.show();
                textValue = textSource.val();
            }
            parent.find(".description.hidden").val(textValue);
            updateAllDescriptionsValidation();
        });
        $171('.input-list').on('input', '.descriptionInput', function() {
            var parent = getDescriptionParent($(this));
            parent.find(".description.hidden").val($(this).val());
            var descriptionType = parent.find('.descriptionSelect').val();
            toggleDescriptionValidations(parent, descriptionType);
            updateAllDescriptionsValidation();
        });
        $171('[id=add-description]').click(function() {
            var latestDescriptionIndex = $('.description.hidden').length -1
            var descriptionType = $('.descriptionSelect[id^=dc:description.'+latestDescriptionIndex+'.type]');
            var parent = getDescriptionParent(descriptionType);
            addFullEasyCounter(parent.find('.descriptionInput.full:visible'));
            toggleDescriptionValidations(parent, descriptionType.val());
            updateAllDescriptionsValidation();
        });
    });
</script>
